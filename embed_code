        <div class="bizchat-log" id="bizchat-log">
            <div class="bizchat-message bizchat-bot-message">
                <strong>Bot:</strong> Hi! I can help answer your questions. What would you like to know?
            </div>
        </div>
        <div class="bizchat-counter" id="bizchat-counter">0/25 words</div>
        <form class="bizchat-form" id="bizchat-form">
            <input class="bizchat-input" id="bizchat-input" type="text" placeholder="Ask us anything..." autocomplete="off">
            <button class="bizchat-submit" type="submit">Send</button>
        </form>
    </div>
</div>

<script>
(function() {
    // ===== CONFIGURATION =====
    const BUSINESS_ID = "CLIENT-BUSINESS-ID"; // ⚠️ REPLACE THIS WITH CLIENT'S ACTUAL BUSINESS ID
    const API_URL = "https://chatbot-business-1.onrender.com/chat";
    const MAX_WORDS = 25;
    const MAX_CHARACTERS = 200;
    
    // ===== DOM ELEMENTS =====
    const widget = document.getElementById('bizchat-widget');
    const chatLog = document.getElementById('bizchat-log');
    const chatForm = document.getElementById('bizchat-form');
    const chatInput = document.getElementById('bizchat-input');
    const wordCounter = document.getElementById('bizchat-counter');
    
    // ===== FUNCTIONS =====
    window.expandBizChat = function() {
        widget.classList.remove('minimized');
        widget.classList.add('expanded');
    };
    
    window.minimizeBizChat = function() {
        widget.classList.remove('expanded');
        widget.classList.add('minimized');
    };
    
    // Click outside to close
    document.addEventListener('click', (e) => {
        if (widget.classList.contains('expanded') && !widget.contains(e.target)) {
            minimizeBizChat();
        }
    });
    
    function addMessage(sender, text, className) {
        const messageDiv = document.createElement('div');
        messageDiv.className = `bizchat-message ${className}`;
        messageDiv.innerHTML = `<strong>${sender}:</strong> ${text}`;
        chatLog.appendChild(messageDiv);
        chatLog.scrollTop = chatLog.scrollHeight;
    }
    
    // Update word counter as user types
    chatInput.addEventListener('input', () => {
        const text = chatInput.value.trim();
        const wordCount = text ? text.split(/\s+/).length : 0;
        const charCount = text.length;
        
        wordCounter.textContent = `${wordCount}/25 words`;
        
        if (wordCount > 20 || charCount > 180) {
            wordCounter.classList.add('warning');
        } else {
            wordCounter.classList.remove('warning');
        }
        
        // Enforce character limit
        if (charCount > MAX_CHARACTERS) {
            chatInput.value = text.substring(0, MAX_CHARACTERS);
        }
    });
    
    // Handle form submission
    chatForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const message = chatInput.value.trim();
        if (!message) return;
        
        // Validate word count
        const wordCount = message.split(/\s+/).length;
        if (wordCount > MAX_WORDS) {
            addMessage('System', `Please limit your question to ${MAX_WORDS} words or less.`, 'bizchat-warning');
            return;
        }
        
        // Validate character count
        if (message.length > MAX_CHARACTERS) {
            addMessage('System', 'Your message is too long. Please shorten it.', 'bizchat-warning');
            return;
        }
        
        // Display user message
        addMessage('You', message, 'bizchat-user-message');
        chatInput.value = '';
        wordCounter.textContent = '0/25 words';
        wordCounter.classList.remove('warning');
        
        try {
            const response = await fetch(API_URL, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ 
                    message: message,
                    business_id: BUSINESS_ID
                })
            });
            
            const data = await response.json();
            addMessage('Bot', data.reply || data.error || 'Sorry, I couldn\'t process that.', 'bizchat-bot-message');
            
        } catch (error) {
            addMessage('System', 'Connection error. Please try again.', 'bizchat-warning');
        }
    });
})();
</script>